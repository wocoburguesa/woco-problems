#include <iostream>
#include <vector>

using namespace std;

int pachinko_odds(string p){
  vector<int> modifiers;
  for(int i = 0; i < p.size(); ++i){
    int mod = 0;
    switch(p[i]){
    case '_':
      if(i==0 || i==(p.size()-1))
        mod++;
      else
        mod = modifiers[i-1];
      break;
    default:
      break;
    }
    modifiers.push_back(mod);
  }
  
  float ans = 0;
  for(int i = 0; i < p.size(); ++i){
    int buff = 0;
    switch(p[i]){
    case '/':
      if(i==0)
        buff = 100;
      else
        buff = 100*modifiers[i-1];
      break;
    case '\\':
      if(i==(p.size()-1))
        buff = 100;
      else
        budd = modifiers[i+1];
      break;
    case '|':
      if(i==0){
        buff += 50;
        buff += 50*modifiers[i+1];
      }
      else if(i==(p.size()-1)){
        buff += 50;
        buff += 50*modifiers[i-1];
      }
      else
        buff += 50*(modifiers[i-1]+modifiers[i+1]);
    }
    ans += buff;
  }

  ans /= p.size();
  return (int)ans;
}

int main(){
  string pachinko;
  while(cin >> pachinko && pachinko != "#"){
    cout << pachinko_odds(pachinko) << endl;
  }
  return 0;
}
